# Streamlit Secrets Configuration
# Copy this file to secrets.toml and fill in your values
# NEVER commit secrets.toml to git!

# Required: Anthropic API key for Claude
ANTHROPIC_API_KEY = "sk-ant-xxxxx"

# Optional: Brave Search API for web search
BRAVE_API_KEY = ""

# Optional: Firecrawl API for JS rendering
FIRECRAWL_API_KEY = ""

# Password protection for the app (required for public demos)
[passwords]
# Add users and passwords here
# Format: username = "password"
demo = "your-demo-password"
admin = "your-admin-password"
